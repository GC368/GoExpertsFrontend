pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
               git branch: 'main',
                   url: 'https://github.com/GC368/GoExpertsFrontend.git'
            }
        }

        stage('Build') {
            steps {
                // Run npm build
                sh 'npm run build'
            }
        }

        stage('Deploy to AWS') {
            steps {
                script {
                    // Deploy to AWS 
                    // sh 'aws s3 sync ./build s3://testuseast123'
                    withAWS(region: 'us-east-1', credentials: 'aws_goexpert') {
                        sh 'aws s3 cp ./build s3://testuseast123 --recursive'
                    }
                    // withAWS(region: 'us-east-1', credentials: '923094287044') {
                    //     s3Upload(files: './build', bucket: 'testuseast123', path: 'path/on/s3')
                    // }
                }
            }
        }
    }
}

